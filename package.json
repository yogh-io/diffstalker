{
  "name": "diffstalker",
  "version": "0.1.8",
  "description": "Terminal application that displays git diff/status for directories",
  "author": "yogh-io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yogh-io/diffstalker.git"
  },
  "homepage": "https://github.com/yogh-io/diffstalker#readme",
  "bugs": {
    "url": "https://github.com/yogh-io/diffstalker/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "diffstalker": "bin/diffstalker"
  },
  "scripts": {
    "postinstall": "node scripts/patch-neo-blessed.cjs",
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "build:prod": "tsc && bun build dist/index.js --outfile dist/index.js --minify --target node --packages external",
    "bundle": "bun run build:prod && bun build dist/index.js --outdir dist/bundle --minify --target node --external neo-blessed",
    "start": "bun dist/index.js",
    "start:bundle": "bun dist/bundle/index.js",
    "test": "bun test src/*.test.ts src/**/*.test.ts",
    "test:watch": "bun test --watch src/*.test.ts src/**/*.test.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "bun run build:prod"
  },
  "keywords": [
    "git",
    "diff",
    "terminal",
    "tui",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "emphasize": "^7.0.0",
    "fast-diff": "^1.3.0",
    "ignore": "^7.0.5",
    "neo-blessed": "^0.2.0",
    "simple-git": "^3.27.0",
    "string-width": "^8.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/blessed": "^0.1.27",
    "@types/node": "^22.10.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "patch-package": "^8.0.1",
    "prettier": "^3.8.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1"
  }
}
