{
  "name": "diffstalker",
  "version": "0.1.5",
  "description": "Terminal application that displays git diff/status for directories",
  "author": "yogh-io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yogh-io/diffstalker.git"
  },
  "homepage": "https://github.com/yogh-io/diffstalker#readme",
  "bugs": {
    "url": "https://github.com/yogh-io/diffstalker/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "diffstalker": "bin/diffstalker"
  },
  "scripts": {
    "dev": "tsx src/index.tsx",
    "build": "tsc",
    "build:prod": "tsc && node scripts/minify.js",
    "bundle": "npm run build:prod && ncc build dist/index.js -o dist/bundle && node scripts/minify.js ../dist/bundle",
    "start": "node dist/index.js",
    "start:bundle": "node dist/bundle/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "npm run build:prod"
  },
  "keywords": [
    "git",
    "diff",
    "terminal",
    "tui",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "emphasize": "^7.0.0",
    "fast-diff": "^1.3.0",
    "ink": "^6.6.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "simple-git": "^3.27.0",
    "string-width": "^8.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.7",
    "@types/react": "^19.2.0",
    "@vercel/ncc": "^0.38.4",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.1.0"
  }
}
